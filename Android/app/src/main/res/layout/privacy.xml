<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="OS Privacy Settings"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:id="@+id/privacyyy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_autorenew_black_24dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="50dp" />


    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:elevation="30dp"
        app:cardBackgroundColor="#c3fef8"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="145dp"
        android:layout_width="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textViewprivacy"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="The audit reports as shown above would be updated in our official dashboard with the specifications identified."
        android:textSize="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textAlignment="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="80dp"/>


</RelativeLayout>